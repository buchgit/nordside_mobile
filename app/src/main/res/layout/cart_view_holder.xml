<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_cart_view_holder"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_margin="18dp"
    android:padding="15dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="W,1.5"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tw_cart_view_holder_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tw_cart_view_holder_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tw_cart_view_holder_2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_plus_cart_view_holder"
            app:layout_constraintStart_toEndOf="@+id/tw_cart_view_holder_1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_plus_cart_view_holder"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="+++"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tw_cart_view_holder_3"
            app:layout_constraintStart_toEndOf="@+id/tw_cart_view_holder_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tw_cart_view_holder_3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_minus_cart_view_holder"
            app:layout_constraintStart_toEndOf="@+id/button_plus_cart_view_holder"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_minus_cart_view_holder"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="---"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tw_cart_view_holder_3"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>