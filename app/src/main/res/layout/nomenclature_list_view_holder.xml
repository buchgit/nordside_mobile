<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_fragment_nomenclature"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="5sp"
    app:cardBackgroundColor="@color/teal_700">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tw_nomenclature_view_holder_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tw_nomenclature_view_holder_2"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tw_nomenclature_view_holder_2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tw_nomenclature_view_holder_1"
            app:layout_constraintEnd_toStartOf="@+id/button_plus"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/button_plus"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="+++"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tw_nomenclature_view_holder_2"
            app:layout_constraintEnd_toStartOf="@+id/tw_nomenclature_view_holder_3"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tw_nomenclature_view_holder_3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_plus"
            app:layout_constraintEnd_toStartOf="@+id/button_minus"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/button_minus"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="---"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tw_nomenclature_view_holder_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

